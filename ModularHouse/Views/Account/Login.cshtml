@model ModularHouse.Models.LoginAdmin

@{ 
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="description" content="Панельное строительство домов под ключ." />
    <title>Авторизация</title>
    <link rel="stylesheet" type="text/css" href="~/Content/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Rubik&display=swap" rel="stylesheet">
</head>
<body>
    <div class="auth">
        <div class="auth_head">
            <div class="auth_head_text">
                <h2>design</h2>
            </div>
        </div>
        <div class="auth_body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class="control-label col-md-2" for="Login">Логин</label>
                    <div class="col-md-10">
                        <input class="auth_input_txt" id="Login" name="Login" type="text" value="">
                        <span class="field-validation-valid text-danger" data-valmsg-for="Login" data-valmsg-replace="true"></span>
                    </div>
                </div>
                <br>
                <div class="form-group">
                    <label class="control-label col-md-2" for="Password">Пароль</label>
                    <div class="col-md-10">
                        <input class="auth_input_txt" id="Password" name="Password" type="password" value="">
                        <span class="field-validation-valid text-danger" data-valmsg-for="Password" data-valmsg-replace="true"></span>
                    </div>
                </div>
                <br />
                <input type="submit" value="Войти" class="auth_input_button" />
            </div>
            }
        </div>
    </div>
</body>
</html>